{
    "roots": ["src"],
    "transform": {
        "^.+\\.ts?$": "ts-jest"
    },
    "moduleNameMapper": {
        "~/(.*)": "<rootDir>/src/",
        "^.+\\.(css|less|hbs)$": "<rootDir>/src/utils/assetMock.ts"
    },
    "modulePathIgnorePatterns": ["index.ts"],
    "moduleFileExtensions": ["ts", "js"],
    "transformIgnorePatterns": ["node_modules/"],
    "testPathIgnorePatterns": ["<rootDir>/src/index.ts"]
}
