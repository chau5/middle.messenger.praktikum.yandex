<div class="window signin bg-orange">
    <div class="inner d-flex flex-column h-100">
        <h2 class="text-center mb-3">Sign In</h2>
        <form class="h-100 d-flex flex-column justify-content-between" action="#">
            <div class="fields">
                <div class="mb-2">
                    <label for="login" class="form-label">Login</label>
                    {{{inputs.login}}}
                </div>
                <div class="mb-2">
                    <label for="password" class="form-label">Password</label>
                    {{{inputs.password}}}
                </div>
            </div>
            <div class="actions d-flex flex-wrap justify-content-center mb-3">
                {{{buttons.signin}}}
                {{{buttons.signup}}}
            </div>
        </form>
    </div>
</div>