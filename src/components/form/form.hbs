<form class="h-100 d-flex flex-column justify-content-between" action="#">
    <div class="fields">
        {{#each props.inputs}}
            <div class="mb-2">
                {{{this}}}
            </div>
        {{/each}}
    </div>
    <div class="actions d-flex flex-wrap flex-column align-items-center my-3">
        {{#each props.buttons}}
            <div class="mb-2">
                {{{this}}}
            </div>
        {{/each}}
    </div>
</form>